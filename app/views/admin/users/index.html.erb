<div class="p-5">
    <div class="flex justify-between items-center mb-8 p-3">
        <span class="text-3xl font-bold">Users List</span>

        <%= link_to new_user_registration_path, class: "text-base lg:text-md px-4 py-2 sm:px-4 sm:py-2 text-white shadow-md rounded-md bg-blue-500 hover:bg-blue-600 flex items-center space-x-2" do %>
            <i class="bi bi-person-fill-add text-xl"></i> 
            <span>Add New User</span>
        <% end %>
    </div>

    <div class="relative overflow-hidden shadow-md sm:rounded-lg p-8 border-t border-gray-200">
        <table class="w-full table-auto text-xs sm:text-md text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs sm:text-sm md:text-md lg:text-md text-gray-700 bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-3 py-2 w-24 whitespace-nowrap">Employee ID</th>
                    <th scope="col" class="px-3 py-2 w-24 whitespace-nowrap">Name</th>
                    <th scope="col" class="px-3 py-2 w-24 hidden sm:table-cell whitespace-nowrap">Job Title</th>
                    <th scope="col" class="px-3 py-2 w-24 hidden md:table-cell whitespace-nowrap">Employment Status</th> 
                    <th scope="col" class="px-3 py-2 w-24 hidden md:table-cell whitespace-nowrap">Salary</th>
                    <th scope="col" class="px-3 py-2 w-24 whitespace-nowrap">Eligibility</th>
                    <th scope="col" class="px-3 py-2 w-24 hidden lg:table-cell whitespace-nowrap">Role</th>
                    <th scope="col" class="px-3 py-2 w-24 whitespace-nowrap">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr class=" text-xs sm:text-sm md:text-md lg:text-md bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <% @users.each do |user| %>
                        <th scope="row" class="px-3 py-2 w-24 text-gray-900 dark:text-white"> <%= user.employee_id %> </th>
                        <td class="px-3 py-2 w-24 capitalize"> <%= user.f_name + " " + user.l_name %> </td>
                        <td class="px-3 py-2 w-24 capitalize hidden sm:table-cell"> <%= user.job_title %> </td>
                        <td class="px-3 py-2 w-24 capitalize hidden md:table-cell"> <%= user.employment_status %> </td>  
                        <td class="px-3 py-2 w-24 hidden md:table-cell"> <%= user.salary %> </td> 
                        <td class="px-3 py-2 w-24"> Eligible </td>
                        <td class="px-3 py-2 w-24 capitalize hidden lg:table-cell"> <%= user.roles.pluck(:name).join(", ") %> </td>
                        <td class="px-3 py-2 w-24">
                            <button class="px-2 py-1 text-blue-600"><i class="bi bi-eye-fill"></i></button>
                            <button class="px-2 py-1 text-orange-600"><i class="bi bi-pencil-square"></i></button>
                            <button class="px-2 py-1 text-red-600"><i class="bi bi-trash3-fill"></i></button>
                        </td>
                    <% end %>
                </tr>
            </tbody>
        </table>
    </div>
</div>
