<body class="bg-gray-100 p-6">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 mb-6">
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Pending Requests</h2>
        <p class="text-2xl font-bold text-blue-600"><%= @pending_requests %></p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Approved Requests</h2>
        <p class="text-2xl font-bold text-green-600"><%= @approved_requests %></p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Ongoing Cash Advances</h2>
        <p class="text-2xl font-bold text-yellow-600"><%= @ongoing_cash_advances %></p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Total Cash Advances (Year)</h2>
        <p class="text-2xl font-bold text-purple-600">PHP <%= number_to_currency(@total_cash_advances, unit: "", precision: 2) %></p>
      </div>
    </div>

    <div class="relative overflow-hidden shadow-md sm:rounded-lg p-8 border-t border-gray-200">
      <h2 class="text-xl font-semibold mb-4">Audit Logging</h2>
      <table class="w-full table-auto text-xs sm:text-md text-center text-gray-500 dark:text-gray-400">
        <thead class="text-xs sm:text-sm md:text-md lg:text-md p-2 text-gray-700 bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th class="p-2">Date</th>
            <th class="p-2">User</th>
            <th class="p-2">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @audit_logs.each do |log| %>
            <tr class="odd:bg-gray-50 even:bg-white">
              <td class="p-2"><%= log.created_at.strftime("%Y-%m-%d") %></td>
              <td class="p-2"><%= "#{log.user.f_name} #{log.user.l_name}" %></td>

              <td class="p-2"><%= log.action %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</body>
