<div class="p-6">
  <div class="mx-auto">
    <h1 class="text-3xl font-bold mb-6">Finance Dashboard</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-6 mb-6">
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Total Pending Requests</h2>
        <p class="text-2xl font-bold text-yellow-600">
          <%= @total_pending_requests %>
        </p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Total Released Requests</h2>
        <p class="text-2xl font-bold text-green-600">
          <%= @total_released_requests %>
        </p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Total Ongoing Cash Advances</h2>
        <p class="text-2xl font-bold text-blue-600">
          <%= @total_ongoing_users %>
        </p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-semibold">Total Cash Advances for the Year</h2>
        <p class="text-2xl font-bold text-gray-800">
          <%= number_to_currency(@total_cash_advances_year, unit: "PHP ", precision: 2) %>
        </p>
      </div>
    </div>
    <div class="relative overflow-hidden shadow-md sm:rounded-lg p-8 border-t border-gray-200">
      <h2 class="text-xl font-semibold mb-4">Cash Advances Due in Next Payroll</h2>
      <table class="w-full table-auto text-xs sm:text-md text-center text-gray-500 dark:text-gray-400 mb-7">
        <thead class="text-xs sm:text-sm md:text-md lg:text-md p-2 text-gray-700 bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th class="p-2">Employee Name</th>
            <th class="p-2">Due Date</th>
            <th class="p-2">Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @due_next_payroll.each do |repayment| %>
            <% employee = repayment.cash_adv_request.employee %>
            <tr class="odd:bg-gray-50 even:bg-white">
              <td class="p-2"><%= "#{employee.f_name} #{employee.l_name}" %></td>
              <td class="p-2"><%= repayment.due_date.strftime("%Y-%m-%d") %></td>
              <td class="p-2">PHP <%= number_to_currency(repayment.amount, unit: '', precision: 2, delimiter: ',') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @pagy.pages > 1 %>
        <%= render "/layouts/pagy/pagination", pagy: @pagy_due_next_payroll %>
      <% end %>
    </div>
    <hr class="mt-10">
    <h1 class="text-3xl font-bold mb-6">My Account</h1>
    <div class="relative overflow-hidden shadow-md sm:rounded-lg p-8 border-t border-gray-200 mt-10">
      <h2 class="text-xl font-semibold mb-4">Payroll Summary</h2>
      <table class="w-full table-auto text-xs sm:text-md text-center text-gray-500 dark:text-gray-400">
        <thead class="text-xs sm:text-sm md:text-md lg:text-md text-gray-700 bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th class="p-2">Description</th>
            <th class="p-2">Basic</th>
            <th class="p-2">SSS</th>
            <th class="p-2">PhilHealth</th>
            <th class="p-2">PAGIBIG</th>
            <th class="p-2">Net Amount</th>
            <th class="p-2">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr class="odd:bg-gray-50 even:bg-white">
            <td class="p-2">March 2025 Payroll</td>
            <td class="p-2">PHP 25,000.00</td>
            <td class="p-2">PHP 1,000.00</td>
            <td class="p-2">PHP 750.00</td>
            <td class="p-2">PHP 500.00</td>
            <td class="p-2 font-semibold text-green-600">PHP 22,750.00</td>
            <td class="p-2">
              <a href="#" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-md text-xs">View</a>
            </td>
          </tr>
          <tr class="odd:bg-gray-50 even:bg-white">
            <td class="p-2">February 2025 Payroll</td>
            <td class="p-2">PHP 25,000.00</td>
            <td class="p-2">PHP 1,000.00</td>
            <td class="p-2">PHP 750.00</td>
            <td class="p-2">PHP 500.00</td>
            <td class="p-2 font-semibold text-green-600">PHP 22,750.00</td>
            <td class="p-2">
              <a href="#" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-md text-xs">View</a>
            </td>
          </tr>
          <tr class="odd:bg-gray-50 even:bg-white">
            <td class="p-2">January 2025 Payroll</td>
            <td class="p-2">PHP 25,000.00</td>
            <td class="p-2">PHP 1,000.00</td>
            <td class="p-2">PHP 750.00</td>
            <td class="p-2">PHP 500.00</td>
            <td class="p-2 font-semibold text-green-600">PHP 22,750.00</td>
            <td class="p-2">
              <a href="#" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-md text-xs">View</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="relative overflow-hidden shadow-md sm:rounded-lg p-8 border-t border-gray-200 mt-10">
  <%= render "repayment_schedules/schedule_table", repayment_schedules: @cash_adv_request.repayment_schedules %>
  </div>
</div>
