<section class="min-h-[80vh] flex items-center justify-center dark:bg-gray-900 ">
  <div class="w-full max-w-md bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 border-t-4 border-blue-500">
    <div class="flex justify-center mb-4">
      <!-- Loan Icon -->
      <div class="bg-blue-100 py-3 px-5 rounded-full">
        <i class="bi bi-cash-stack text-3xl text-blue-600"></i>
      </div>
    </div>
    <h2 class="text-center text-2xl font-bold text-gray-900 dark:text-white">Cash Advance System</h2>
    <p class="text-center text-sm text-gray-500 dark:text-gray-300 mb-6">Borrow money and track your dues with ease</p>
    <h2 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail",
              class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white p-2.5" %>
        </div>

        <div class="relative">
          <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Password</label>
          <div class="relative">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", id: "password-input",
                class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm pr-10 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white p-2.5" %>
            <button type="button" onclick="togglePassword()" class="absolute top-1/2 right-3 -translate-y-1/2 text-gray-500">
              <i id="eye-icon" class="bi bi-eye-slash"></i>
            </button>
          </div>
        </div>

        <div class="flex items-center justify-between px-5">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded dark:bg-gray-700 dark:border-gray-600" %>
              <label for="remember_me" class="ml-2 block text-sm text-gray-900 dark:text-gray-300">Remember me</label>
            </div>
          <% end %>
        </div>

        <div>
          <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 rounded-lg text-sm transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>
  function togglePassword() {
    const passwordInput = document.getElementById("password-input");
    const eyeIcon = document.getElementById("eye-icon");

    if (passwordInput.type === "password") {
      passwordInput.type = "text";
      eyeIcon.classList.replace("bi-eye-slash", "bi-eye");
    } else {
      passwordInput.type = "password";
      eyeIcon.classList.replace("bi-eye", "bi-eye-slash");
    }
  }
</script>
