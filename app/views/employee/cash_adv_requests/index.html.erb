                    <% if @approved_count && @approved_count > 0 %>
                        <span class="ml-1 px-2 py-0.5 text-xs font-medium rounded-full bg-red-500 text-white"><%= @approved_count %></span>
                    <% end %>
                <% end %>
            </li>
            <li class="mr-2">
                <%= link_to employee_cash_adv_requests_path(status: 'released', q: params[:q]&.to_unsafe_h), 
                    class: "inline-block p-4 #{@status == 'released' ? 'text-blue-600 border-b-2 border-blue-600 rounded-t-lg active' : 'border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300'}" do %>
                    Released 
                    <% if @released_count && @released_count > 0 %>
                        <span class="ml-1 px-2 py-0.5 text-xs font-medium rounded-full bg-red-500 text-white"><%= @released_count %></span>
                    <% end %>
                <% end %>
            </li>
            <li class="mr-2">
                <%= link_to employee_cash_adv_requests_path(status: 'on-going', q: params[:q]&.to_unsafe_h), 
                    class: "inline-block p-4 #{@status == 'on-going' ? 'text-blue-600 border-b-2 border-blue-600 rounded-t-lg active' : 'border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300'}" do %>
                    On-Going 
                    <% if @ongoing_count && @ongoing_count > 0 %>
                        <span class="ml-1 px-2 py-0.5 text-xs font-medium rounded-full bg-red-500 text-white"><%= @ongoing_count %></span>
                    <% end %>
                <% end %>
            </li>
            <li class="mr-2">
                <%= link_to employee_cash_adv_requests_path(status: 'settled', q: params[:q]&.to_unsafe_h), 
                    class: "inline-block p-4 #{@status == 'settled' ? 'text-blue-600 border-b-2 border-blue-600 rounded-t-lg active' : 'border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300'}" do %>
                    Settled 
