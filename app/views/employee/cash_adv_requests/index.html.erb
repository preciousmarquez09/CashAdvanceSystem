                        <span class="ml-1 px-2 py-0.5 text-xs font-medium rounded-full bg-red-500 text-white"><%= @pending_count %></span>
                    <% end %>
                <% end %>
            </li>
            <li class="mr-2">
                <%= link_to employee_cash_adv_requests_path(status: 'approved', q: params[:q]&.to_unsafe_h), 
                    class: "inline-block p-4 #{@status == 'approved' ? 'text-blue-600 border-b-2 border-blue-600 rounded-t-lg active' : 'border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300'}" do %>
