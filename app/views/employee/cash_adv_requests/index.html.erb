        <ul class="flex flex-wrap -mb-px text-sm font-medium text-center">
            <li class="mr-2">
                <%= link_to employee_cash_adv_requests_path(status: 'all', q: params[:q]&.to_unsafe_h), 
                    class: "inline-block p-4 #{@status == 'all' ? 'text-blue-600 border-b-2 border-blue-600 rounded-t-lg active dark:text-blue-500 dark:border-blue-500' : 'border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300'}" do %>
                    All
                <% end %>
            </li>
            <li class="mr-2">
                <%= link_to employee_cash_adv_requests_path(status: 'pending', q: params[:q]&.to_unsafe_h), 
                    class: "inline-block p-4 #{@status == 'pending' ? 'text-blue-600 border-b-2 border-blue-600 rounded-t-lg active' : 'border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300'}" do %>
